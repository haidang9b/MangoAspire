{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp.ReverseProxy": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Cors": {
    "AllowedOrigins": [
      "https://localhost:7000",
      "http://localhost:5173",
      "http://localhost:5000"
    ]
  },
  "ReverseProxy": {
    "Routes": {
      "products-route": {
        "ClusterId": "products-cluster",
        "Match": {
          "Path": "/api/products/{**catch-all}"
        }
      },
      "catalog-types-route": {
        "ClusterId": "products-cluster",
        "Match": {
          "Path": "/api/catalog-types/{**catch-all}"
        }
      },
      "orders-route": {
        "ClusterId": "orders-cluster",
        "Match": {
          "Path": "/api/orders/{**catch-all}"
        }
      },
      "carts-route": {
        "ClusterId": "shoppingcart-cluster",
        "Match": {
          "Path": "/api/carts/{**catch-all}"
        }
      },
      "coupons-route": {
        "ClusterId": "coupons-cluster",
        "Match": {
          "Path": "/api/coupons/{**catch-all}"
        }
      },
      "chat-route": {
        "ClusterId": "chatagent-cluster",
        "Match": {
          "Path": "/api/chat/{**catch-all}"
        }
      },
      "chat-history-route": {
        "ClusterId": "chatagent-cluster",
        "Match": {
          "Path": "/api/chat-histories/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "products-cluster": {
        "Destinations": {
          "products-api": {
            "Address": "https+http://products-api"
          }
        }
      },
      "orders-cluster": {
        "Destinations": {
          "orders-api": {
            "Address": "https+http://orders-api"
          }
        }
      },
      "shoppingcart-cluster": {
        "Destinations": {
          "shoppingcart-api": {
            "Address": "https+http://shoppingcart-api"
          }
        }
      },
      "coupons-cluster": {
        "Destinations": {
          "coupons-api": {
            "Address": "https+http://coupons-api"
          }
        }
      },
      "chatagent-cluster": {
        "Destinations": {
          "chatagent-app": {
            "Address": "https+http://chatagent-app"
          }
        }
      }
    }
  }
}