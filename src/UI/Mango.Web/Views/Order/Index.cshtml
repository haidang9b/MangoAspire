@model Mango.Web.Models.PaginatedItemsDto<Mango.Web.Models.OrderDto>

@{
    ViewData["Title"] = "My Orders";
}

<div class="container pt-4">
    <div class="card">
        <div class="card-header bg-dark text-white">
            <h3 class="mb-0"><i class="bi bi-bag-check"></i> My Orders</h3>
        </div>
        <div class="card-body">
            @if (Model == null || !Model.Data.Any())
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> You haven't placed any orders yet.
                </div>
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                    <i class="bi bi-cart"></i> Start Shopping
                </a>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-secondary">
                            <tr>
                                <th>Order #</th>
                                <th>Date</th>
                                <th>Items</th>
                                <th>Total</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model.Data)
                            {
                                <tr>
                                    <td>
                                        <span class="text-muted">@order.Id.ToString()[..8]...</span>
                                    </td>
                                    <td>@order.OrderTime.ToString("MMM dd, yyyy HH:mm")</td>
                                    <td>@order.ItemCount item(s)</td>
                                    <td class="fw-bold">@string.Format("{0:c}", order.OrderTotal)</td>
                                    <td>
                                        @switch (order.Status)
                                        {
                                            case "Processing":
                                                <span class="badge bg-warning text-dark">
                                                    <i class="bi bi-hourglass-split"></i> Processing
                                                </span>
                                                break;
                                            case "Completed":
                                                <span class="badge bg-success">
                                                    <i class="bi bi-check-circle"></i> Completed
                                                </span>
                                                break;
                                            case "Cancelled":
                                                <span class="badge bg-danger">
                                                    <i class="bi bi-x-circle"></i> Cancelled
                                                </span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary">@order.Status</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye"></i> View Details
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @* Pagination *@
                <nav aria-label="Order pagination">
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="text-muted">
                            Showing @(((Model.PageIndex - 1) * Model.PageSize) + 1) - @Math.Min(Model.PageIndex * Model.PageSize, Model.Count) of @Model.Count orders
                        </span>
                        <ul class="pagination mb-0">
                            <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                                <a class="page-link" asp-action="Index" asp-route-pageIndex="@(Model.PageIndex - 1)" asp-route-pageSize="@Model.PageSize">
                                    <i class="fas fa-chevron-left"></i> Previous
                                </a>
                            </li>
                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                                    <a class="page-link" asp-action="Index" asp-route-pageIndex="@i" asp-route-pageSize="@Model.PageSize">@i</a>
                                </li>
                            }
                            <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                                <a class="page-link" asp-action="Index" asp-route-pageIndex="@(Model.PageIndex + 1)" asp-route-pageSize="@Model.PageSize">
                                    Next <i class="fas fa-chevron-right"></i>
                                </a>
                            </li>
                        </ul>

                    </div>
                </nav>
            }
        </div>
    </div>
</div>
