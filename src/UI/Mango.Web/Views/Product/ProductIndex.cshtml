@model Mango.Web.Models.PaginatedItemsDto<ProductDto>

<br/>
<br/>
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-info">Products</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="ProductCreate" class="btn btn-outline-info">
                <i class="fas fa-plus"></i> Create new Product
            </a>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Category name</th>
                    <th>Price</th>
                    <th>Stock</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Data.Any())
                {
                    @foreach(var item in Model.Data)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.CategoryName</td>
                            <td>@item.Price.ToString("c")</td>
                            <td>
                                @if (item.Stock > 0)
                                {
                                    <span class="badge bg-success">@item.Stock</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Out of Stock</span>
                                }
                            </td>
                            <td>
                                <a asp-action="ProductEdit" class="btn btn-success" asp-route-productId="@item.Id">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="ProductDelete" class="btn btn-danger" asp-route-productId="@item.Id">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>

        @if (Model != null && Model.Data.Any())
        {
            @* Pagination *@
            <nav aria-label="Product pagination" class="mt-3">
                <div class="d-flex justify-content-between align-items-center">
                    <span class="text-muted">
                        Showing @(((Model.PageIndex - 1) * Model.PageSize) + 1) - @Math.Min(Model.PageIndex * Model.PageSize, Model.Count) of @Model.Count products
                    </span>
                    <ul class="pagination mb-0">
                        <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                            <a class="page-link" asp-action="ProductIndex" asp-route-pageIndex="@(Model.PageIndex - 1)" asp-route-pageSize="@Model.PageSize">
                                <i class="fas fa-chevron-left"></i> Previous
                            </a>
                        </li>
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                                <a class="page-link" asp-action="ProductIndex" asp-route-pageIndex="@i" asp-route-pageSize="@Model.PageSize">@i</a>
                            </li>
                        }
                        <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                            <a class="page-link" asp-action="ProductIndex" asp-route-pageIndex="@(Model.PageIndex + 1)" asp-route-pageSize="@Model.PageSize">
                                Next <i class="fas fa-chevron-right"></i>
                            </a>
                        </li>
                    </ul>

                </div>
            </nav>
        }
    </div>
</div>