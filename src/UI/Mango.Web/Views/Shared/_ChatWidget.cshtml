<div id="chat-container">
    <div id="chat-button" class="btn btn-primary rounded-circle shadow">
        <i class="fas fa-comment"></i>
    </div>
    
    <div id="chat-window" class="card shadow d-none">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">AI Assistant</h5>
            <button type="button" class="btn-close btn-close-white" id="close-chat"></button>
        </div>
        <div class="card-body" id="chat-messages">
            <!-- Messages will appear here -->
            <div class="message received mb-2">
                <small class="text-muted d-block">AI Agent</small>
                <div class="p-2 rounded bg-light">Hello! How can I help you today?</div>
            </div>
        </div>
        <div class="card-footer">
            <div class="input-group">
                <input type="text" id="chat-input" class="form-control" placeholder="Type a message...">
                <button class="btn btn-primary" id="send-btn">
                    <i class="fas fa-paper-plane"></i>
                </button>
            </div>
        </div>
    </div>
</div>
